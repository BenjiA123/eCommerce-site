extends base

block content
  main.main
      section.overview 
        .card-container
          each product in products 
            .card
              .card__header
                .card__picture
                    img.card__picture-img(src=`/images/header/shoes_header.jpg`)
                h3.heading-tertirary
                    span= product.name
              .card__details
                h4.card__sub-heading #{product.category}


                //- p.card__text= product.description
                  .card__data
                    span #{product.amount} left in stock
                  .card__data
                    span Costs only ##{product.price}


                .card__footer
                  p
                      span.card__footer-value #{product.price} 
                      |
                  a.btn.btn--green.btn--small(href=`product/${product._id}`) Details
